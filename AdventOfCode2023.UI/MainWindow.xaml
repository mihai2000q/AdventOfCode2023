<Window x:Class="AdventOfCode2023.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AdventOfCode2023.UI.Views"
        xmlns:userControls="clr-namespace:AdventOfCode2023.UI.UserControls"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="MainWindow" Height="800" Width="800"
        MinWidth="450" MinHeight="300">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="10" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <userControls:TitleBar Grid.Row="0" />
        
        <views:MainView Grid.Row="1"/>
    </Grid>
</Window>
